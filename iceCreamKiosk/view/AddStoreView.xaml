<UserControl x:Class="iceCreamKiosk.view.AddStoreView"
             DataContext="{Binding AddStore, Source={StaticResource Locator}}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iceCreamKiosk.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,-0.4">
        <Button Command="{Binding AddStoreCommand}" Content="Add Store" HorizontalAlignment="Left" Height="108" Margin="93,56,0,0" VerticalAlignment="Top" Width="291"/>
        <Button Command="{Binding DismissCommand}" Content="Dismiss" HorizontalAlignment="Left" Height="95" Margin="467,69,0,0" VerticalAlignment="Top" Width="251"/>
        <TextBox Text="{Binding Store.Name}" HorizontalAlignment="Left" Height="31" Margin="145,192,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="558" />
        <TextBox Text="{Binding Store.Location}" HorizontalAlignment="Left" Height="39" Margin="145,242,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="558"/>
        <TextBox Text="{Binding Store.Phone}" HorizontalAlignment="Left" Height="28" Margin="145,292,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="558"/>

    </Grid>
</UserControl>
